import tkinter as tk

count = 0

def counts():
    global count
    count += 1
    label.config(text=f"Count: {count}")

root = tk.Tk()
root.title("Click Counter")
root.geometry("300x200")

label = tk.Label(root, text="Count: 0", font=("Arial", 24))
label.pack(pady=20)

button = tk.Button(root, text="Click!", font=("Arial", 16), command=counts)
button.pack(pady=10)

root.mainloop()
